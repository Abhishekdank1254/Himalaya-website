{
  "name": "himalaya-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/generate-sitemap.js",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "analyze": "vite-bundle-visualizer",
    "optimize:images": "node scripts/optimize-images.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run optimize:images",
    "setup": "npm install --legacy-peer-deps react-router-dom@7.3.0 react-helmet-async@2.0.5 @vercel/analytics@1.5.0 react-icons@5.5.0 framer-motion@12.5.0"
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "framer-motion": "^12.5.0",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.3.0"
  }
}
